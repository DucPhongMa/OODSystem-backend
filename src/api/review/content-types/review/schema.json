{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "reviewContent": {
      "type": "text"
    },
    "customerName": {
      "type": "string"
    },
    "rating": {
      "type": "integer",
      "max": 5,
      "min": 0,
      "default": 0
    },
    "restaurant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::restaurant.restaurant",
      "inversedBy": "reviews"
    }
  }
}
